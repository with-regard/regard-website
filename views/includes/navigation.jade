.contain-to-grid
  nav.top-bar(data-topbar)
    ul.title-area
      li.name
        h1
          a(href="/")
            img(src="/assets/img/regard-logo-and-text.png" height="54px" width="172px")
    section.top-bar-section
      ul.right
        if everyauth.loggedIn
          li.has-dropdown
            a(href="#")
              img(src=everyauth.github.user.avatar_url height="54px" width="54px")
              = everyauth.github.user.name
            ul.dropdown
              li
                a(href="/logout") Logout
        else
          li
            a(href="login") Log in
